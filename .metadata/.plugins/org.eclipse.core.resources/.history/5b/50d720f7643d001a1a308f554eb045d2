package com.dh.miblog.controllers;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@Controller
public class HomeControllers {
	
	/**
	 * mapea / hacia la pagina home.html
	 * @return home.html
	 */
	@RequestMapping(value = "/", method = RequestMethod.GET)
	public String home() {
		return "home";
	}
/**
 *Con GetMapping es mas corto 
 * @param mod1
 * @return
 */
	@GetMapping("/")
//	@RequestMapping(value = "/miblog", method = RequestMethod.GET)
	public String personal(Model mod1) {
		return "personal";
	}

	@RequestMapping(value = "/porfolio", method = RequestMethod.GET)
	public String porfolio() {
		return "porfolio";
	}

}
